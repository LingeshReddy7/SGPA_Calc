<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="39dp"
            android:text="Hi !"
            android:textColor="#176861"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="39dp"
            android:text="Hi !"
            android:textColor="#176861"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="117dp"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="38dp"
            android:text=" "
            android:textColor="#1DD199"
            android:textColorHint="#977F0893"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint=" 18EC61 "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint=" 18EC62 "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint=" 18EC63 "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint=" 18EC64X "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint=" 18EC65X "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber7"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber6"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint=" 18ECL66 "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber8"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint=" 18ECL67 "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNumber9"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber8"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint=" 18ECMP68 "
            android:inputType="number"
            android:textColorHint="#0522C5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber9"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="163dp"
            android:layout_marginLeft="163dp"
            android:layout_marginTop="37dp"
            android:backgroundTint="#C4DEEA"
            android:text="Show"
            android:textSize="20sp"
            android:textColor="#404C8E"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="170sp"
            android:hint="SGPA"
            android:text=""
            android:textColorHint="#977F0893"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="35dp"
            android:text="Enter marks and Calculate Your SGPA .."
            android:textColor="#112383"
            android:textSize="25sp" />

    </RelativeLayout>
</ScrollView>